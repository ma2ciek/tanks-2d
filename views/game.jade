doctype
html(lang='pl')
	head
		title Tanks 2D
		meta(charset='utf-8')
		meta(http-equiv='PRAGMA', content='NO-CACHE')
		meta(http-equiv='CACHE-CONTROL', content='NO-CACHE')
		meta(name='description', content='Simple 2D multiplayer game')
		meta(name='keywords', content='tanks, 2d, tanks-2d, game, maciej, bukowski')
		meta(name='author', content='Maciej Bukowski')
		meta(name='viewport' content='width=device-width, initial-scale=0.5, maximum-scale=0.5, minimum-scale=0.5 user-scalable=no')
		link(rel='stylesheet', href='css/game.css', type='text/css')
		link(rel='icon', href='img/favicon.png')
		script(src='/socket.io/socket.io.js')
		script(src='scripts/jquery-2.1.0.min.js')
		script(src='scripts/data.js')
		script(src='scripts/client.js')
		script(src='scripts/chat_settings.js')

	body.game
		div#main
			canvas#game
			canvas#active
			
			div#clients
			ul#messages
			input#chat(autocomplete="off") 

			div#player_panel
				img.settings(src='img/settings.png')
				img.chat(src='img/chat.png')

			div#abilities
				div#lpm
					div.info LPM
					div.amount 100
				div#ppm
					din.info PPM
					div.amount 3
		div#settings
			H1 Settings
			div
				div.basic
					h2 Basic
					ul
						li 
							span Sound volume:
							input#sound_volume(type="range", min="0", max="1", step="0.1", value="0.5")
				div.advanced
					h2 Advanced
					ul
						li 
							span Game delay:
							input#game_delay(type="text", value="100")
				div.controls
					h2 Controls
					ul
						li
							span Move:
							span [WSAD], Arrows
						li
							span First skill:
							span [Space], LMB
						li
							span Second skill:
							span RMB
						li
							span Chat:
							span [ENTER]
						li
							span Toggle abilities:
							span [TAB]
			button#exit_settings EXIT