doctype
html(lang='pl')
	head
		title Tanks 2D - Settings
		include ./includes/meta.jade
		link(rel='stylesheet', href='sites/settings/style.css', type='text/css')
		script(src='sites/settings/index.js')
	body
		header
			include ./includes/menu.jade
			h1 Ustawienia
		div#main
			div
				div.basic
					h3 Podstawowe
					ul
						li 
							span Poziom dźwięku:
							input#sound_volume(type="range", min="0", max="1", step="0.02")
						li
							span Brak trawy
							input#brak_trawy(type="checkbox")
				div.advanced
					h3 Zaawansowane
					ul
						li 
							span Opóźnienie:
							input#game_delay(type="text")
				div.controls
					h3 Sterowanie
					ul
						li
							span Ruch:
							span [WSAD], Strzałki
						li
							span Strzał:
							span [Space], LPM
						li
							span Aktywny skill:
							span PPM
						li
							span Skill'e
							span [1], [2], ...
						li
							span Chat:
							span [ENTER]
						li
							span Zmiana umiejętności:
							span [TAB]
		include ./includes/footer.jade